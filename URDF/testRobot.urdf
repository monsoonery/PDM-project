<?xml version="1.0"?>
<robot name="simplerobot">
    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>

    <link name="world"/>
    <link name="base_link_x">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>
    <link name="base_link_y">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>
    <link name="base_link">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="50.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <collision>
            <origin rpy="0.0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.6" radius="0.4"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.6" radius="0.4"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <joint name="mobile_joint_x" type="prismatic">
        <origin rpy="0 0 0" xyz="0 0 0.05"/>
        <axis xyz="1 0 0"/>
        <parent link="world"/>
        <child link="base_link_x"/>
        <limit effort="87" velocity="2"/>
    </joint>
    <joint name="mobile_joint_y" type="prismatic">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 1 0"/>
        <parent link="base_link_x"/>
        <child link="base_link_y"/>
        <limit effort="87" velocity="2"/>
    </joint>
    <joint name="mobile_joint_theta" type="revolute">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 0 1"/>
        <parent link="base_link_y"/>
        <child link="base_link"/>
        <limit effort="87" velocity="2"/>
    </joint>

    <link name="arm_1_link">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0.35"/>
            <mass value="10.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.35"/>
            <geometry>
                <cylinder length="0.7" radius="0.1"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.35"/>
            <geometry>
                <cylinder length="0.7" radius="0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>
    <joint name="base_to_arm_1" type="revolute">
        <origin xyz="0 0 0.35"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" velocity="0.5" upper="1.7" lower="-1.7"/>
        <parent link="base_link"/>
        <child link="arm_1_link"/>
    </joint>

    <link name="arm_2_link">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0.3"/>
            <mass value="7.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.3"/>
            <geometry>
                <cylinder length="0.6" radius="0.1"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.3"/>
            <geometry>
                <cylinder length="0.6" radius="0.10"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>
    <joint name="arm_1_to_arm_2" type="revolute">
        <origin xyz="0 0 0.7"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" velocity="0.5" upper="1.7" lower="-1.7"/>
        <parent link="arm_1_link"/>
        <child link="arm_2_link"/>
    </joint>

</robot>